@model IEnumerable<BusinessObject.TUrl>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-primary">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong> @TempData["Msg"].ToString()</strong>
    </div>

}

<table class="table table-bordered table-hover">
    <tr>
        <th>@Html.CheckBox("selectall")</th>
        <th>
            Title
        </th>
        <th>
            URL
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            Category
        </th>
        <th>
            Submitted By
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.ActionLink("A", "Approve", new { id = item.UrlID }, new { onclick = "return ConfrimAction();" }) |
                    @Html.ActionLink("R", "Reject", new { id = item.UrlID }, new { onclick = "return ConfrimAction();" })*@
                @Html.CheckBox(item.UrlID.ToString(), false, new { @class = "ckb", Id = item.UrlID })


            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TCategory.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TUser.FirstName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UrlID }) |
                @Html.ActionLink("Details", "Details", new { id = item.UrlID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UrlID })
            </td>
        </tr>
    }

</table>
